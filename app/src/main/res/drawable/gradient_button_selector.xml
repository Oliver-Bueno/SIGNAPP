<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#42A5F5"
                android:endColor="#66BB6A"
                android:angle="45" />
            <corners android:radius="16dp" />
            <padding android:top="12dp" android:bottom="12dp" />
            <stroke android:color="#33FFFFFF" android:width="1dp"/>
            <solid android:color="#33000000" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4FC3F7"
                android:endColor="#81C784"
                android:angle="45" />
            <corners android:radius="16dp" />
            <padding android:top="12dp" android:bottom="12dp" />
            <stroke android:color="#33FFFFFF" android:width="1dp"/>
            <shadowColor>#55000000</shadowColor>
        </shape>
    </item>
</selector>
